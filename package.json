{
  "name": "dnd-scribe-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "bun --filter web dev",
    "dev:bot": "bun --filter bot dev",
    "build:web": "bun --filter web build",
    "start:bot": "bun --filter bot start",
    "db:generate": "bun --filter web drizzle:generate",
    "db:migrate": "bun --filter web drizzle:migrate",
    "db:push": "bun --filter web drizzle:push",
    "db:studio": "bun --filter web drizzle:studio",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check ."
  },
  "packageManager": "bun@1.3.3",
  "devDependencies": {
    "@biomejs/biome": "2.3.11"
  },
  "trustedDependencies": [
    "@discordjs/opus"
  ]
}
